<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Essential policies for kiosk mode -->
        <lock-now />
        <force-lock />
        <wipe-data />
        <reset-password />
        <limit-password />
        <watch-login />
        <disable-camera />
        <encrypted-storage />
        <disable-keyguard-features />

        <!-- For newer Android versions -->
        <uses-policy android:name="android.app.policy.PROFILE_OWNER" />
        <uses-policy android:name="android.app.policy.DEVICE_OWNER" />
    </uses-policies>
</device-admin>